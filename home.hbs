{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
the {body} of the default.hbs template, which contains our header/footer. }}

{{! The big featured header on the homepage, with the site logo and description }}

{{! The main content area on the homepage }}
<main class="content" role="main">
    <div class="featured-posts container-fluid">
        <div class="row">
            {{#get "posts" filter="featured:true" limit=3}}
                {{#foreach posts}}
                    <div class="col-md-4">
                        <a href="{{url}}">
                            <div class="featured-post" style="background-image: url('{{image}}')">
                                <div class="content">
                                    <div class="title">{{title}}</div>
                                    <i class="fa fa-star favorite" aria-hidden="true"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                {{/foreach}}
            {{/get}}
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 article-container">
                {{#foreach posts limit=1}}
                    <div class="list-item">
                        <article class="{{post_class}}">
                            <header class="post-header">
                                <h2 class="post-title">
                                <a href="{{url}}">{{{title}}}</a>
                            </h2>
                                <div class="post-meta text-muted">
                                    {{#if author}}<span class="list-author">{{author}}</span> - {{/if}}
                                    <time datatime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
                                </div>
                                {{#if image}}
                                    <a href="{{url}}"><img class="first-image" src="{{image}}" title= {{title}} /></a>
                                {{/if}}
                            </header>
                            <section class="post-excerpt">
                                <p>{{excerpt}}&hellip; <a href="{{url}}">more</a></p>
                                
                            </section>
                        </article>
                    </div>
                {{/foreach}}
                <div class="article-list">
                    {{#foreach posts from=2}}
                        <div class="row list-item">
                            {{#if image}}
                                <div class="col-md-3">
                                    <a href="{{url}}"><img class="list-image" src="{{image}}" title= {{title}} /></a>
                                </div>
                                <div class="col-md-9">
                            {{else}}
                                <div class="col-md-12">
                            {{/if}}
                            <article class="{{post_class}}">
                                <header class="post-header">
                                    <h2 class="post-title">
                                <a href="{{url}}">{{{title}}}</a>
                            </h2>
                                    <div class="post-meta text-muted">
                                        {{#if author}}<span class="list-author">{{author}}</span> - {{/if}}
                                        <time datatime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
                                    </div>
                                </header>
                                <section class="post-excerpt">
                                    <p>{{excerpt}}&hellip; <a href="{{url}}">more</a></p>
                                </section>
                            </article>
                            </div>
                            </div>
                    {{/foreach}}
                    </div>
                </div>
            </div>
            {{!! After all the posts, we have the previous/next pagination links }}
            {{pagination}}
        </div>
</main>
