{{!< default}}
<main class="content" role="main">
    {{#post}}
        {{#if image}}
            <header class="post-header" style="background-image: url('{{image}}')">
            </header>
        {{/if}}
        <div class="container">
            <article class="{{post_class}}">
                {{! Everything below outputs content of the the post which has been published }}
                <h1 class="post-title page-header">{{title}}</h1>
                <div class="post-meta">
                    {{#if author}}
                        <div class="row">
                            <div class="col-xs-1">
                                <img class="author-image" src="{{author.image}}" />
                            </div>
                            <div class="col-xs-11">
                                <section class="author">
                                    <h4>{{author.name}}</h4>
                                    <p class="text-muted">{{author.bio}}</p>
                                </section>
                            </div>
                        </div>
                    {{/if}}
                </div>

                <div class="row">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="post-meta text-muted">
                                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time>
                                {{#if tags}} on {{tags separator=" | "}}{{/if}}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <section class="post-content">
                                {{content}}
                            </section>
                        </div>
                    </div>
                </div>

                <footer class="post-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <section class="share">
                                <h4>Share this post</h4>
                                <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
          			Twitter
          		</a>
                                <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share', 'width=580,height=296');return false;">
          			Facebook
          		</a>
                                <a href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
          			Google+
          		</a>
                            </section>
                        </div>
                    </div>

                </footer>
            </article>
        </div>
</main>
{{/post}}
